.ui.container
  .ui.secondary.pointing.menu
    a.item(routerLink='/') Home
    a.item(routerLink='/books', routerLinkActive='active') 阅读
    ng-template([ngIf]='currentUser')
      a.item(routerLink='/vocabulary', routerLinkActive='active') 我的词汇
    .right.menu
      a.item(*ngIf='!currentUser', href='javascript:', (click)='gotoLogin()') 登录
      .item(*ngIf='currentUser')
        | {{currentUser.name}} &nbsp;&nbsp;
      .ui.dropdown.item(suiDropdown='')
        | 设置
        i.dropdown.icon
        .menu(suiDropdownMenu='')
          a.item(routerLink='/base-vocabulary', routerLinkActive='active') 基础词汇
          a.item(routerLink='/word-tags', routerLinkActive='active') 词频标签
      a.item((click)='logout()', href='#') 退出

  .ui.small.form.login(*ngIf='loginForm')
    h3 登录
    p(*ngIf='loginMessage')
      | {{loginMessage}}
    .field
      input(type="text", #name="", placeholder="Username")
    .field
      input(type="password", #pass="", placeholder="Password")
    .field
      .ui.small.button((click)='cancelLogin()') 取消
      .ui.small.primary.button((click)='login(name.value, pass.value)') 登录
    .ui.hidden.clearing.divider

  router-outlet

  p &nbsp;
