.word-source
  .text-title([suiCollapse]='!showTitle')
    .book-title(*ngIf='para.book') ({{para.book.code}}) {{para.book.name}}
    ng-template([ngIf]='para.chap')
      .chap-title.pre-wrap {{para.chap.name}}
      .chap-title-zh.pre-wrap([suiCollapse]='!showTrans') {{para.chap.zhName}}
  .word-source-text
    .para-text.content-text((mouseup)='onMouseup($event)', (contextmenu)='onContextmenu($event,"content")', spellcheck='false', #contentText='')
    div([suiCollapse]='!showTrans')
      .ui.small.clearing.hidden.divider
      .para-text.trans-text([hidden]='!showTrans', (contextmenu)='onContextmenu($event,"trans")', spellcheck='false', #transText='')
